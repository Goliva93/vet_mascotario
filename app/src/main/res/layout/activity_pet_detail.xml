<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#050505" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volver"
                    android:textColor="#455A64"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardCornerRadius="60dp"
                        app:cardBackgroundColor="#E8EAF6"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_tracks"
                            app:tint="#3949AB"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#0E1B42"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perro"
                        android:textColor="#757575"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Editar información"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:cornerRadius="12dp"
                        app:strokeColor="#B0BEC5"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Información básica"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#0E1B42"
                        android:layout_marginBottom="16dp"/>

                    <include layout="@layout/item_info_row" android:id="@+id/row_especie" />
                    <View android:layout_width="match_parent" android:layout_height="1dp"
                        android:background="#EEEEEE" android:layout_marginVertical="12dp"/>

                    <include layout="@layout/item_info_row" android:id="@+id/row_raza" />
                    <View android:layout_width="match_parent" android:layout_height="1dp"
                        android:background="#EEEEEE" android:layout_marginVertical="12dp"/>

                    <include layout="@layout/item_info_row" android:id="@+id/row_sexo" />
                    <View android:layout_width="match_parent" android:layout_height="1dp"
                        android:background="#EEEEEE" android:layout_marginVertical="12dp"/>

                    <include layout="@layout/item_info_row" android:id="@+id/row_edad" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Agendar cita para Max"
                android:backgroundTint="#83BB62"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accesos rápidos"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#0E1B42"
                        android:layout_marginBottom="16dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="8dp">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Historial médico"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            app:chipBackgroundColor="@android:color/white"
                            app:chipStrokeColor="#B0BEC5"
                            app:chipStrokeWidth="1dp"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vacunas"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            app:chipBackgroundColor="@android:color/white"
                            app:chipStrokeColor="#B0BEC5"
                            app:chipStrokeWidth="1dp"/>

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consultas anteriores"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            app:chipBackgroundColor="@android:color/white"
                            app:chipStrokeColor="#B0BEC5"
                            app:chipStrokeWidth="1dp"/>
                    </com.google.android.material.chip.ChipGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* Funciones próximamente"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>